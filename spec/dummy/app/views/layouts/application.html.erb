<!DOCTYPE html>
<html>
  <head>
    <title>Dummy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <nav>
      Federails:
      [<strong>Actors:</strong> <%= link_to 'All', federails.client_actors_url %>]
      [<strong>Activities:</strong> <%= link_to 'All', federails.client_activities_url %>]
    </nav>

    <nav>
      <% if !current_user %>
        <%= link_to 'Login', :new_user_session %>
        <%= link_to 'Register', :new_user_registration %>
      <% else %>
        <%= link_to 'Feed', federails.client_feed_url %>
        |
        <%= link_to 'You', federails.client_actor_path(current_user.actor) %>
        ||
        <%= current_user.email %>
        <%= button_to 'Logout', :destroy_user_session, method: :delete, form: { style: 'display: inline-block;' } %>
      <% end %>
    </nav>

    <hr>
    <%= render 'federails/client/actors/lookup_form' %>
    <hr>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
